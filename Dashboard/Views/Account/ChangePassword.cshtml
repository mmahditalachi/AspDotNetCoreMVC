@model ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
}

<h1>ChangePassword</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            @*<div asp-validation-summary="All"></div>*@
            <div class="form-group">
                <label asp-for="CurrentPassword"></label>
                <input type="password" asp-for="CurrentPassword" />
                <span class="text-danger" asp-validation-for="CurrentPassword"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input type="password" asp-for="NewPassword" />
                <span class="text-danger" asp-validation-for="NewPassword"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfrimPassword"></label>
                <input type="password" asp-for="ConfrimPassword" />
                <span class="text-danger" asp-validation-for="ConfrimPassword"></span>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>

